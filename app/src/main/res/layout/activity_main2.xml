<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_photo_1112080"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Our Services"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Large scale farming of food and cash crops.   "
                android:textColor="@android:color/holo_green_dark"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="235dp"
                app:srcCompat="@drawable/whatsapp_image_2022_08_11_at_5_17_58_pm" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ADFFFFFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Trading and exporting agricultural products."
                android:textColor="#4CAF50"
                android:textSize="27dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                app:srcCompat="@drawable/whatsapp_image_2022_08_11_at_5_28_55_pm" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#CEFFFFFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Processing of farm produce."
                android:textColor="#4CAF50"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                app:srcCompat="@drawable/whatsapp_image_2022_08_11_at_5_28_54_pm__2_" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="277dp"
                    android:layout_height="136dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/whatsapp_image_2022_08_14_at_5_37_24_pm" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#B9FFFFFF"
                    android:gravity="center"
                    android:text="Trading agro-chemical products."
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>